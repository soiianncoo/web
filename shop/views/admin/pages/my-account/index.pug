extends  ../../layouts/default.pug

block main 
    .app-main 
        .container-fluid
            h1(class="mb-4") Thông tin cá nhân 

            if(user.avatar)
                img(src=user.avatar, width="150px" class="mb-3")
            else 
                img(src="admin/imgages/avatar.png",  width="150px" class="mb-3")
            
            if(user.fullName)
                p Họ tên: 
                    b #{user.fullName}

            if(user.email)
                p Email
                    b #{user.email}

            if(user.phone)
                p Số điện thoại
                    b #{user.phone}
            p 
                span Trạng thái: 
                span 
                    b #{ user.status==="status"?"Hoạt động": "Dừng hoạt động"}
            if(role.title)
                p phân quyền: 
                    b #{role.title}
            a(href=`${prefixAdmin}/my-account/edit` class="btn btn-primary") Chỉnh sửa thông tin 
            