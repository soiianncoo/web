extends  ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 
        .app-main 
            .container-fluid
                h1(class="mb-4") Thêm mới bài viết
                form(
                    action = `${prefixAdmin}/blogs/create`
                    id = "form-create-product"
                    method="POST"
                    enctype="multipart/form-data"
                )
                    div(class="form-group")
                        label(for="title") Tiêu đề 
                        input(
                            type="text"
                            class="form-control"
                            id="title"
                            name="title"
                            required
                        )
                    div(
                        class="form-group"
                        upload-image
                    )
                        label(for="thumbnail") Ảnh 
                        input(
                            type="file"
                            class="form-control-file"
                            id="thumbnail"
                            name="thumbnail"
                            accept="image/*"
                            upload-image-input
                        )
                        .image-preview-container(style="display: flex; flex-wrap: wrap; margin-top: 10px;")
                            img(
                                src="", alt=""
                                upload-image-preview
                                class="image-preview"
                                style="display: none;"
                            )
                    div(class="form-group")
                        label(for="author") Tác giả
                        input(
                            type="text"
                            class="form-control"
                            id="author"
                            name="author"
                            required
                        )
                    div(class="form-group")
                        label(for="content") Nội dung 
                        textarea(
                            class="form-control textarea-mce"
                            id="content"
                            name="content"
                            rows="5"
                        )
                    div(class="form-group form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusActive"
                            name="status"
                            value="active"
                            checked
                        )
                        label(for="statusActive" class="form-check-label") Hoạt động
                    div(class="form-group form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusInActive"
                            name="status"
                            value="inactive"
                        )
                        label(for="statusActive" class="form-check-label") Dừng hoạt động
                    .form-group
                        button(type="submit" class="btn btn-primary") Thêm mới